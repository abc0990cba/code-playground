{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "lib": ["es2015", "dom"],
        "outDir": "./dist/",
        "sourceMap": true,
        "declaration": true,
        "typeRoots": [                            /* List of folders to include type definitions from. */
            "node_modules/@types",
            "src/index.d.ts"
          ],
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "src/stories"]
}