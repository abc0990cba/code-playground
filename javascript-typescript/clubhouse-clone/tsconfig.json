{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "jsx": "preserve"
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/steps/GitHubStep/index.js",
    "components/steps/TwitterStep/index.tsx",
    "components/steps/ChooseAvatarStep/index.js",
    "components/steps/EnterCodeStep/index.tsx",
    "components/steps/EnterNameStep/index.tsx",
    "components/steps/EnterPhoneStep/index.tsx"
  ],
  "exclude": ["node_modules"]
}
